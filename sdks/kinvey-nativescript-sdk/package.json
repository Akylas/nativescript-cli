{
  "private": true,
  "version": "4.0.0",
  "name": "kinvey-nativescript-sdk",
  "description": "Kinvey NativeScript SDK for developing NativeScript applications.",
  "author": "Kinvey, Inc.",
  "homepage": "http://www.kinvey.com",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "del lib",
    "build": "babel src -d lib --ignore \"src/**/*.spec.js\"",
    "lint": "eslint src"
  },
  "dependencies": {
    "@babel/runtime": "7.1.5",
    "kinvey-acl": "1.0.0",
    "kinvey-aggregation": "1.0.0",
    "kinvey-app": "1.0.0",
    "kinvey-cache-memory": "1.0.0",
    "kinvey-cache-nativescript-sqlite": "1.0.0",
    "kinvey-datastore": "1.0.0",
    "kinvey-endpoint": "1.0.0",
    "kinvey-files": "1.0.0",
    "kinvey-http-nativescript": "1.0.0",
    "kinvey-user": "1.0.0",
    "kinvey-kmd": "1.0.0",
    "kinvey-query": "1.0.0",
    "nativescript-hook": "0.2.4"
  },
  "peerDependencies": {
    "tns-core-modules": "~5.0.2"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.5",
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/preset-env": "7.1.5",
    "babel-eslint": "10.0.1",
    "eslint": "5.8.0",
    "eslint-config-kinvey-platform": "kinvey/eslint-kinvey-platform#0.1.1",
    "eslint-plugin-import": "2.14.0"
  },
  "files": [
    "hooks/*",
    "lib/*",
    "platforms/*"
  ],
  "nativescript": {
    "hooks": [{
        "type": "before-checkForChanges",
        "script": "hooks/before-checkForChanges.js",
        "inject": true
      },
      {
        "type": "before-preview-sync",
        "script": "hooks/before-preview-sync.js",
        "inject": true
      }
    ],
    "platforms": {
      "ios": "4.0.0",
      "android": "4.0.0"
    }
  }
}
