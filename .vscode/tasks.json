{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "options": {
        "cwd": "${workspaceRoot}/"
      }
    },
    {
      "label": "build:dev",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "options": {
        "cwd": "${workspaceRoot}/",
        "env": {
          "NODE_ENV": "development"
        }
      }
    }
  ]
}
