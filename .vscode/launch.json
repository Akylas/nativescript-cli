{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ACL Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}/packages/kinvey-acl",
      "args": [
        "--require",
        "@babel/register",
        "--ui",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/packages/kinvey-acl/src"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Aggregation Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "@babel/register",
        "--ui",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/packages/kinvey-aggregation/src"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cache Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "@babel/register",
        "--ui",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/packages/kinvey-cache/src"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node SDK Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}/tests/node",
      "args": [
        "--require",
        "dotenv/config",
        "--require",
        "@babel/register",
        "--ui",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/tests/node/tests"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "smartStep": true
    }
  ]
}
