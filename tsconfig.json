{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"sourceMap": true,
		"declaration": false,
		"removeComments": false,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"lib": ["ESNext"]
	},
	"include": ["lib/", "test/"]
}
