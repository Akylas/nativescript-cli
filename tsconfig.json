{
	"compilerOptions": {
		"target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017"],
		"sourceMap": true,
		"declaration": false,
		"removeComments": false,
		"noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"noUnusedLocals": true
	},
	"exclude": [
		"node_modules",
		"lib/common/node_modules",
		"scratch",
		"coverage",
		"resources/test"
	]
}
