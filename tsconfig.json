{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"declaration": false,
		"removeComments": false,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noEmitOnError": false
	},
	"exclude": [
		"node_modules",
		"lib/common/node_modules",
		"scratch",
		"coverage"
	]
}
